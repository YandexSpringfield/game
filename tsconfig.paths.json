      "@containers": ["./client/containers"],
      "@containers/*": ["./client/containers/*"],

      "@pages": ["./client/pages"],
      "@pages/*": ["./client/pages/*"],

      "@store": ["./client/store"],
      "@store/*": ["./client/store/*"],

      "@types": ["./types"],
      "@types/*": ["./types/*"],

      "@api": ["./api"],
      "@api/*": ["./api/*"],

      "@router": ["./client/router"],
      "@router/*": ["./client/router/*"],

      "@hoc-helpers": ["./client/hoc-helpers"],
