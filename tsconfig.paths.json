{
  "compilerOptions": {
    "baseUrl": "src/client",
    "paths": {
      "@/*": ["./*"],

      "@appConstants": ["./client/appConstants"],
      "@appConstants/*": ["./client/appConstants/*"],

      "@assets": ["./client/assets"],
      "@assets/*": ["./client/assets/*"],

      "@utils": ["./client/utils"],
      "@utils/*": ["./client/utils/*"],

      "@hooks": ["./client/hooks"],
      "@hooks/*": ["./client/hooks/*"],

      "@components": ["./client/components"],
