{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true
  },
  "extends": "./tsconfig.paths.json",
  "include": [
    "./src/client/**/*.ts",
    "./src/client/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
